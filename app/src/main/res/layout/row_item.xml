<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/descriptionColumn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:text="FILEY,NORTH YORKSHIRE"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Thu, 22 Nov 2018 18:05:02"
        android:textColor="@android:color/black" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/descriptionColumn"
        android:layout_alignEnd="@+id/descriptionColumn"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Magnitude: 0.5"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtDepth"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_below="@+id/txtMag"
            android:layout_marginTop="5dp"
            android:text="Depth 2km"
            android:textColor="@android:color/black" />

    </LinearLayout>


